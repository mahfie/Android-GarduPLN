<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.inspeksi1.Transmisi1Activity">

    <LinearLayout
        android:id="@+id/layout_choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phasaR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/phasa_r"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/tv_phasaS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/phasa_s"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/tv_phasaT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/phasa_t"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_spring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp"
            android:text="@string/spring"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/tv_hidrolik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp"
            android:text="@string/hydraulic"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/tv_pneumatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp"
            android:text="@string/pneumatic"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/tv_sfg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp"
            android:text="@string/sfg"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/tv_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/_4sdp"
            android:text="@string/oil"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_setgetphasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Phasa"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />

    <include
        layout="@layout/springlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/sfglayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/hidrolayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/oillayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/pneulayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Tambah Sinyal"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/labelAlarm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Alarm"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="@id/etAlarm"
        app:layout_constraintBottom_toBottomOf="@id/etAlarm"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etAlarm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/labelJudul"
        app:layout_constraintLeft_toRightOf="@id/labelAlarm"/>

    <TextView
        android:id="@+id/labelSinyal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Sinyal"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="@id/etSinyal"
        app:layout_constraintBottom_toBottomOf="@id/etSinyal"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etSinyal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etAlarm"
        app:layout_constraintLeft_toLeftOf="@id/etAlarm"/>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"/>-->

    <Button
        android:id="@+id/btnAddSinyal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSinyal"/>

</androidx.constraintlayout.widget.ConstraintLayout>